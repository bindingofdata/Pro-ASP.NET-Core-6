@model ProductsListViewModel

@foreach (var product in Model?.Products ?? Enumerable.Empty<Product>())
{
    <div>
        <h3>@product.Name</h3>
        @product.Description
        <h4>@product.Price.ToString("c")</h4>
    </div>
}